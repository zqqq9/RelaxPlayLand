{
  "name": "relaxplayland",
  "version": "1.0.0",
  "description": "A relaxing online gaming platform with fun and casual games",
  "main": "server.js",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serve": "npx http-server . -p 3000",
    "start": "node server.js",
    "dev:server": "nodemon server.js",
    "init": "node init-data.js"
  },
  "keywords": ["gaming", "casual games", "online games", "relaxing games"],
  "author": "RelaxPlayLand",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "body-parser": "^1.20.2",
    "sanitize-html": "^2.11.0",
    "slugify": "^1.6.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  }
} 